<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Portal de notícias</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="css/bootstrap.min.css" >
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

		<!-- favicon -->
		<link rel="shortcut icon" href="images/favicon.ico" />
	</head>

	<body>

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					
					<img src="images/logo.png" />
				</div>

				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><a href="/">HOME</a></li>
						<li><a href="/incluir_noticia">INCLUIR NOTÍCIA</a></li>
						<li><a href="/noticias">NOTÍCIAS</a></li>
					</ul>
				</div>
			</div>
		</nav>

	    <div class="container">
			<% for(var a of noticias){  %>
	    	<div class="row">
	    		<div class="col-md-12">
	    			<div class="noticia_wrapper">
		    			<span class="noticia_autor"><%=a.autor %></span>
		    			<a href="noticia?id_noticia=<%=a.id%>" class="noticia_titulo"><%=a.titulo %></a>
		    			<span class="noticia_data"><%=a.dataNoticia %></span>
		    			<br />
		    			<p class="noticia_resumo">
							<%=a.resumo %>
		    			</p>
		    		</div>
		    	</div>
			</div>

			<%  
				}
			%>
			
			
	    </div>
	
		<script src="js/bootstrap.min.js" ></script>
	
	</body>
</html>